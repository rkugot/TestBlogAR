<h4>Post details:</h4>
<br />
<p>
	<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
	<%= @row.content %>
	<br />
	<br />
	<small class="pull-right">Added at <%= @row.created_at %></small>
</p>
<br />
<p>
	<form action="/post/<%= @row.id %>" method="POST">
	  	<textarea name="com[content]" class="form-control" rows="6" placeholder="Type comment here" style="width: 800px"></textarea>
	  	<br />
	  	<button type="submit" class="btn btn-primary">Add comment</button>
	</form>
	<br />
	<h4>Comments:</h4>
	<br />
	<% @comments.each do |comment| %>
		<p>
			<%= comment.content %>
			<br />
			<br />
			<small class="pull-right">Added at <%= comment.created_at %></small>
		</p>
		<hr />
	<% end %>

</p>